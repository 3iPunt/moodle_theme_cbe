<div class="media-block">
    <div class="expand">
        <button class="expand-media action-media" data-cmid="{{ id }}" data-action="expand">
            <i class="fa fa-chevron-down" aria-hidden="true"></i>
        </button>
        <button class="contract-media action-media" data-cmid="{{ id }}" data-action="contract">
            <i class="fa fa-chevron-up" aria-hidden="true"></i>
        </button>
    </div>
    <div class="media-content" data-media="{{ id }}">
        <div class="media-resource">{{{ media }}}</div>
    </div>
</div>
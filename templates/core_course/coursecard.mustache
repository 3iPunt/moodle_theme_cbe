{{!
    @template course_course/coursecard

    This template renders the a card for the course cards.

    Example context (json):
    {
        "courses": [
            {
                "name": "Assignment due 1",
                "viewurl": "https://moodlesite/course/view.php?id=2",
                "courseimage": "https://moodlesite/pluginfile/123/course/overviewfiles/123.jpg",
                "fullname": "course 3",
                "hasprogress": true,
                "progress": 10,
                "visible": true
            }
        ]
    }
}}
<div class="card dashboard-card" role="listitem"
    data-region="course-content"
    data-course-id="{{{id}}}" data-theme='cbe'>
    <a href="{{viewurl}}" tabindex="-1">
        <div class="card-img dashboard-card-img" style='background-image: url("{{{courseimage}}}");'>
            <span class="sr-only">{{#str}}aria:courseimage, core_course{{/str}}</span>
        </div>
    </a>
    <div class="teachers">
        <div class="teacher">
            <button type="button" class="btn-tooltip" data-toggle="tooltip" data-placement="bottom" title="Juana García Sánchez">
                <img class="picture-teacher" src="https://randomuser.me/api/portraits/women/75.jpg" alt="">
            </button>
        </div>
        <div class="teacher">
            <button type="button" class="btn-tooltip" data-toggle="tooltip" data-placement="bottom" title="Monica Reus Lerma">
                <img class="picture-teacher" src="https://randomuser.me/api/portraits/women/63.jpg" alt="">
            </button>
        </div>
    </div>
    <div class="card-body pr-1 course-info-container" id="course-info-container-{{id}}-{{uniqid}}">
        <div class="d-flex align-items-start">
            <div class="w-100 text-truncate">
                <div class="text-muted muted d-flex mb-1 flex-wrap">
                    {{$coursecategory}}{{/coursecategory}}
                    {{#showshortname}}
                    {{$divider}}{{/divider}}
                    <span class="sr-only">
                        {{#str}}aria:courseshortname, core_course{{/str}}
                    </span>
                    <div>
                        {{{shortname}}}
                    </div>
                    {{/showshortname}}
                </div>
                <a href="{{viewurl}}" class="aalink coursename mr-2">
                    {{> core_course/favouriteicon }}
                    <span class="sr-only">
                            {{#str}}aria:coursename, core_course{{/str}}
                        </span>
                    {{$coursename}}{{/coursename}}
                </a>
                {{^visible}}
                    <div class="d-flex flex-wrap">
                        <span class="badge badge-info">{{#str}} hiddenfromstudents {{/str}}</span>
                    </div>
                {{/visible}}
            </div>
        </div>
    </div>
    <footer class="course-footer">
        <div class="user-role">
            <button type="button" class="btn-tooltip" data-toggle="tooltip" data-placement="bottom" title="Profesor">
                {{# pix }} role_teacher, theme_cbe, Teacher {{/ pix }}
            </button>
        </div>
        <div class="students">
            <button type="button" class="btn-tooltip" data-toggle="tooltip" data-placement="bottom" title="20 estudiantes">
                <i class="fa fa-users" aria-hidden="true"></i><span>20</span>
            </button>
        </div>
        <div class="user-role">
            <a href="{{ viewurl }}" class="btn btn-secondary aula">ver aula</a>
        </div>
    </footer>
    {{$progress}}{{/progress}}
</div>


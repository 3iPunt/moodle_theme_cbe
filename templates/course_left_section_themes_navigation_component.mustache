{{# title }}
<h3 class="title">{{ title }}</h3>
{{/ title }}
<div class="themes-navigation">
    <a id="view_alls" href="{{ view_all }}">
        <i class="fa fa-eye" aria-hidden="true"></i>
        <span>{{# str }} course_navigation_view_all, theme_cbe {{/ str }}</span>
    </a>
    <ul class="themes">
        {{# themes }}
        <li class="theme {{# active }}active{{/ active }}">
            <a href="{{ href }}">{{ name }}</a>
        </li>
        {{/ themes }}
    </ul>
    {{# is_teacher }}
    <button id="create_theme" type="button" class="btn btn-outline-primary" data-toggle="modal" data-target=".bd-createsection-modal-lg">
        <i class="fa fa-plus-circle" aria-hidden="true"></i>
        <span>{{# str }} course_navigation_create_theme, theme_cbe {{/ str }}</span>
    </button>
    {{/ is_teacher }}
</div>
{{# is_teacher }}
<div class="modal fade bd-createsection-modal-lg" tabindex="-1" role="dialog" aria-labelledby="createSectionModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg cbe-modal">
        <div class="modal-content">
            <header>
                <h1>Creación de Tema</h1>
                <p>Para crear un tema, indique su nombre y seleccione la posición donde desee crearla</p>
            </header>
            <main data-region="modal-create-section">
                <label class="label-create" for="name">Nombre del tema:</label>
                <input class="input-create" type="text" id="section-name-input" data-txt="name" placeholder="Escriba el nombre del tema">
                <hr>
                <label class="label-create" for="name">Seleccione posición:</label>
                <ul class="themes-create" data-region="themes">
                    {{# themes }}
                        <li class="theme-create">
                            <div class="position">
                                <input type="radio" name="position" class="select-position" value="{{ section }}">
                                <label class="here">Aquí</label>
                            </div>
                            <span class="section-name-create">{{ name }}</span>
                        </li>
                    {{/ themes }}
                    <div class="position last">
                        <input type="radio" name="position" class="select-position" value="0" checked>
                        <label class="here">Aquí</label>
                    </div>
                </ul>
                <hr>
                <div class="action-buttons">
                    <button class="btn cancel" data-dismiss="modal">Cancelar</button>
                    <button class="btn btn-primary" data-action="createsection">Crear tema</button>
                </div>
            </main>
        </div>
    </div>
</div>
{{/ is_teacher }}

{{#js}}
    {{# is_teacher }}
        require(['theme_cbe/createsection'], function(createsection) {
            createsection.initCreatesection('[data-region="modal-create-section"]', {{ courseid }});
        });
    {{/ is_teacher }}
{{/js}}